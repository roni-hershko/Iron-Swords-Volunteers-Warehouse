# Makefile for WareHouse project

# Compiler and flags
CXX = g++
CXXFLAGS = -std=c++11 -Wall

# Source files and executable name
SRCS = main.cpp file1.cpp file2.cpp
OBJS = $(SRCS:.cpp=.o)
EXEC = myprogram

# Targets
all: $(EXEC)

$(EXEC): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(EXEC)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(EXEC)